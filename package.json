{
  "name": "angularlib",
  "version": "2.0.5",
  "description": "Angular Common Library",
  "main": "./dist/index.umd.js",
  "module": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "license": "BSD-3-Clause",
  "keywords": [
    "angular",
    "angular5",
    "aot",
    "aot-compatible",
    "aot-compilation",
    "library",
    "ng",
    "typescript",
    "typing",
    "typestub",
    "common"
  ],
  "author": "Beeno Tung (https://www.facebook.com/messages/t/beenotung)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beenotung/angularlib.git"
  },
  "bugs": {
    "url": "https://github.com/beenotung/angularlib/issues"
  },
  "homepage": "https://github.com/beenotung/angularlib#readme",
  "scripts-info": {
    "tslint:aot": "for debug only. not recommented, since the output maybe very compact"
  },
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\"",
    "postformat": "tslint -p . --fix",
    "prelib": "rm -rf dist tmp && ./gen-index",
    "lib": "npm run ngcompile && webpack --config webpack-umd.config.ts",
    "postlib": "./rm-index",
    "prengcompile": "gulp inline-templates",
    "ngcompile": "ngc -p tsconfig-lib.json",
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --prod",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e"
  },
  "dependencies": {
    "@angular/animations": "^5.2.0",
    "@angular/common": "^5.2.0",
    "@angular/compiler": "^5.2.0",
    "@angular/core": "^5.2.0",
    "@angular/forms": "^5.2.0",
    "@angular/http": "^5.2.0",
    "@angular/platform-browser": "^5.2.0",
    "@angular/platform-browser-dynamic": "^5.2.0",
    "@angular/router": "^5.2.0",
    "@beenotung/tslib": "10.1.1",
    "core-js": "^2.4.1",
    "horizon-utils": "^0.1.0",
    "idl2ts-ng": "^1.2.0",
    "rxjs": "^5.5.6",
    "typestub-multibase": "^0.0.3",
    "zone.js": "^0.8.19"
  },
  "peerDependencies": {
    "@angular/common": "^5.0.0",
    "rxjs": "^5.0.0"
  },
  "devDependencies": {
    "@angular/cli": "~1.7.4",
    "@angular/compiler-cli": "^5.2.0",
    "@angular/language-service": "^5.2.0",
    "@types/jasmine": "~2.8.3",
    "@types/jasminewd2": "~2.0.2",
    "@types/karma": "^0.13.35",
    "@types/node": "^8.0.0",
    "@types/webpack": "^3.0.0",
    "@types/webpack-env": "^1.13.0",
    "angular2-template-loader": "^0.6.2",
    "awesome-typescript-loader": "^3.1.3",
    "codelyzer": "^4.0.1",
    "css-loader": "^0.28.1",
    "gulp": "^3.9.1",
    "gulp-inline-ng2-template": "^4.0.0",
    "jasmine-core": "~2.8.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~2.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "prettier": "^1.13.7",
    "protractor": "~5.1.2",
    "sass-loader": "^6.0.5",
    "to-string-loader": "^1.1.5",
    "ts-node": "~4.1.0",
    "tslint": "~5.9.1",
    "tslint-eslint-rules": "^5.3.1",
    "typescript": "^2.4.2",
    "webpack": "^3.1.0",
    "webpack-angular-externals": "^1.0.2",
    "webpack-rxjs-externals": "^1.0.0",
    "webpack-sources": "^1.0.1"
  }
}
